{
    "custom/logo": {
        "format": "",
        "on-click": "powermenu.sh"
    },
    "custom/notification": {
        "tooltip": false,
        "justify": "center",
        "format": "{icon}",
        "format-icons": {
            "notification": "<span foreground='#F27835'>󰂚</span>",
            "none": "󰂚",
            "dnd-notification": "<span foreground='#F27835'>󰂛</span>",
            "dnd-none": "󰂛",
            "inhibited-notification": "<span foreground='#F27835'>󰂚</span>",
            "inhibited-none": "󰂚",
            "dnd-inhibited-notification": "<span foreground='#F27835'>󰂛</span>",
            "dnd-inhibited-none": "󰂛"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "escape": true
    },
    "clock": {
        "tooltip": false,
        "format": " {:%H:%M}",
        "on-click": "gsimplecal",
        "interval": 60
    },
    "hyprland/language": {
        "format": "{long}",
        "on-click": "kbLayoutSwitch.sh"
    },
    "hyprland/workspaces": {
        "active-only": false,
        "all-outputs": true,
        "format": "{name}",
        "persistent-workspaces": {
            "*": 5
        }
    },
    "tray": {
        "show-passive-items": true,
        "spacing": 8,
        "reverse-direction": true
    },
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 16
    }
}