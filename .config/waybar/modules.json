{
    "custom/logo": {
        "tooltip": false,
        "format": " ",
        "on-click": "powermenu.sh"
    },
    "custom/notification": {
        "tooltip": false,
        "justify": "center",
        "format": "{icon}",
        "format-icons": {
            "notification": " ",
            "none": " ",
            "dnd-notification": " ",
            "dnd-none": " "
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "escape": true
    },
    "clock": {
        "tooltip": false,
        "format": "{:%H:%M}",
        "on-click": "gsimplecal",
        "interval": 60
    },
    "hyprland/language": {
        "format": "{long}",
        "on-click": "kbLayoutSwitch.sh"
    },
    "hyprland/workspaces": {
        "active-only": false,
        "all-outputs": true,
        "format": " ",
        "persistent-workspaces": {
            "*": 10
        }
    },
    "tray": {
        "show-passive-items": true,
        "spacing": 8,
        "reverse-direction": true
    },
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 18
    }
}