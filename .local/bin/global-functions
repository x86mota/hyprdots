#!/usr/bin/env bash

function _endProcess {
    local process="$1"

    pgrep -f "${process}" | while read -r pid; do
        kill "${pid}"
    done
}

function _Confirm {
    CONFIRM_CONFIG="${HOME}/.config/wofi/confirm/confirm.conf"
    CONFIRM_STYLE="${HOME}/.config/wofi/confirm/confirm.css"
    cancel="Cancel"
    confirm="Confirm"

    response="$(echo -e "${cancel}\n${confirm}" | wofi --conf="${CONFIRM_CONFIG}" --style="${CONFIRM_STYLE}")"

    case "${response}" in
        "Cancel")
        echo "${response}"
        return 1
        ;;
        "Confirm")
        echo "${response}"
        return 0
        ;;
        *)
        return 1
        ;;
    esac
}